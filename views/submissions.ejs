<%- include('./partials/global/header.ejs') -%>
    <div>
        <%- include('./partials/global/navbar.ejs') -%>
            <div class='row'>
                <div class='col-lg-2' id='left'>
                    <%- include('./partials/global/menu.ejs') -%>
                </div>
                <% if(currentUser.role==="Admin" ){ %>
                <div class='col-lg-5' id='right'>
                <h5>Add a Submission Type</h5>
                <hr>
                <form action='/submission' method='POST' action="send" id='add-submission'>
                    <div class='form-group'>
                        <input class='form-control' type='text' name='submissionName'></input>
                    </div>
                    <button type='submit'>Add</button>
                </form><br>
                </div>
                <div class='col-lg-5' id='right'>
                    <h5>Submission Types</h5>
                    <hr>
                    <% submissions.forEach(function(submission){ %>
                        <li>
                            <%= submission.submissionName %>
                        </li>
                        <% }) %>
                    </div>
                </div>
                <% } else { %>
                    <div class='col-lg-10' id='right'>
                        <h1>Nice Try! You need to be an admin to access this page.</h1>
                    </div>
                <% } %>
            </div>
    </div>
    <%- include('./partials/global/footer.ejs') -%>




