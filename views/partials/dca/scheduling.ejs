<div class='title'>DCA Scheduling Request</div>
<form action='/dca' method='POST' enctype="multipart/form-data" action="send">
    <input name='cspid' value='<%= currentUser.cspid %>' hidden>
    <div class="form-group">
        <label>Type of Meeting</label>
        <select class="form-control" name='type'>
            <option selected disabled>Select One</option>
            <option>DCA Meeting</option>
            <option>Follow Up DCA Meeting</option>
        </select>
    </div>
    <div class="form-group">
        <label>Schedule Preference</label>
        <select class="form-control" name='preference'>
            <option selected disabled>Select One</option>
            <option>Morning</option>
            <option>Evening</option>
        </select>
    </div>
    <div class="form-group" hidden>
        <label>Schedule Preference</label>
        <select class="form-control" name='status'>
            <option selected>Requested</option>
            <option>Completed</option>
        </select>
    </div>
    <div class="form-group">
        <label>Add Comments</label>
        <textarea type='text' class='form-control' name='comment'></textarea>
    </div>
    <button type='submit' id='submit' style='display: inline-block'>Submit Request</button>
</form>