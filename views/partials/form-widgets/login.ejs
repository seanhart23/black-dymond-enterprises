<div class="form-group" id='loginOnTime'>
    <label for="didyouvisit" required>Did you log in on time?</label><br>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="loginOnTime" value="Yes">
        <label class="form-check-label">
            Yes
        </label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="loginOnTime" value="No">
        <label class="form-check-label">
            No
        </label>
    </div>
</div>
<div class="form-group" id='loginLateReason'>
    <label for="explain">I did not log in on time because...</label>
    <textarea type="text" class="form-control" name='reason' placeholder=''></textarea>
</div>
