<%- include('./partials/global/header.ejs') -%>
    <div>
        <%- include('./partials/global/navbar.ejs') -%>
            <div class='row'>
                <div class='col-lg-2' id='left'>
                    <%- include('./partials/global/menu.ejs') -%>
                </div>
                <% if(currentUser.role==="Admin"){ %>
                <div class='col-lg-10' id='right'>
                        <div class='title'>Register a New Employee</div>
                        <hr>
                    <form action='/register' method='POST'>
                        <div class='form-row'>
                            <div class="form-group col-md-5">
                                <input type="text" class="form-control" name="username" placeholder='Username' required>
                            </div>
                            <div class="form-group col-md-5">
                                <input type="text" class="form-control" name="cspid" placeholder='CSPID' required>
                            </div>
                        </div>
                        <div class='form-row'>
                            <div class="form-group col-md-5">
                                <input type="text" class="form-control" name="firstName" placeholder='First Name' required>
                            </div>
                            <div class="form-group col-md-5">
                                <input type="text" class="form-control" name="lastName" placeholder='Last Name' required>
                            </div>
                        </div>
                        <div class='form-row'>
                            <div class="form-group col-md-5">
                                <input type="email" class="form-control" name="email" placeholder='Email Address'>
                            </div>
                            <div class="form-group col-md-5">
                                <input type="tel" class="form-control" name="phone" placeholder='Phone Number'>
                            </div>
                        </div>
                        <div class='form-row'>
                            <div class="form-group col-md-5">
                                <input type="text" onfocus="(this.type='date')" onblur="(this.type='text')" class="form-control" name="hireDate" placeholder='Hire Date'>
                            </div>
                            <div class="form-group col-md-5">
                                <input type="text" class="form-control" name="cca" placeholder='Current Commitment Adherence'>
                            </div>
                        </div>
                        <div class='form-row'>
                            <div class="form-group col-md-5">
                                <select class="form-control" name='client' id='client'>
                                    <option selected disabled>Choose a Client</option>
                                    <% clients.forEach(function(client){ %>
                                        <option value="<%= client.clientName %>">
                                            <%= client.clientName %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="form-group col-md-5">
                                <select class="form-control" name="role">
                                    <option disabled selected>Choose a role</option>
                                    <option>Admin</option>
                                    <option>Employee</option>
                                </select>
                            </div>
                        </div>
                        <div class='form-row'>
                            <div class="form-group col-md-5">
                                <input type='password' class="form-control" name='password' placeholder="Password" required>
                            </div>
                            <div class="form-group col-md-7">
                            </div>
                        <div>
                        <button type="submit">Register</button>
                    </form>
                    </div>
                    <% } else { %>
                    <div class='col-lg-10' id='right'>
                        <h1>Nice Try!  You need to be an admin to access this page.</h1>
                    </div>
                    <% } %>
                
            </div>
    </div>
    <%- include('./partials/global/footer.ejs') -%>






