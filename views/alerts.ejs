<%- include('./partials/global/header.ejs') -%>
    <div>
        <%- include('./partials/global/navbar.ejs') -%>
            <div class='row'>
                <div class='col-lg-2' id='left'>
                    <%- include('./partials/global/menu.ejs') -%>
                </div>
                <div class='col-lg-10' id='right'>
                    <!-- <div class='title'>Manage Alerts</div> -->
                    <div class='row'>
                        <div class='col-lg-6'>
                            <div class='title'>Add Alert</div>
                            <form action='/alerts' method='POST' action="send">
                                <div class="form-group" id='alert'>
                                    <label>Alert Content</label>
                                    <textarea type="text" class="form-control" name="alert" placeholder=''></textarea>
                                </div>
                                <!-- <div class="form-group" id='alert'>
                                    <label>Priority</label>
                                    <select class="form-control" name="priority" placeholder='Urgency'>
                                        <option>High</option>
                                        <option>Medium</option>
                                        <option>Low</option>
                                    </select>
                                </div> -->
                                <button type='submit'>Post Alert</button>
                            </form>
                        </div>
                        <div class='col-lg-6'>
                        <div class='title'>Active Alerts</div>
                            <% alerts.forEach(function(alert){ %>
                                <div class='alert-preview'>
                                    <%= alert.alert %>
                                    <form action="/alerts/<%= alert._id %>?_method=DELETE" method="POST" class="delete-form">
                                        <button class='btn btn-sm' id='deleteButton'><i class="fa fa-trash" aria-hidden="true"></i></button>
                                    </form>
                                </div>
                            <% }) %>
                        </div>
                    </div>

                </div>

            </div>
    </div>
    <%- include('./partials/global/footer.ejs') -%>


